{
    "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "preserveWatchOutput": true,
      "importHelpers": false,
      "noEmitHelpers": false,
      "skipLibCheck": true,
      "baseUrl": ".",
      "declarationDir": "./dist/typings",
      "outDir": "./dist",
      "typeRoots": [
        "./node_modules/@types",
        "../../node_modules/@types"
      ]
    },
    "include": [
      "src/**/*.ts",
      "typings/",
      "../../typings/"
    ],
    "exclude": [
      "./dist",
      "./config",
      "./.tmp"
    ]
}
