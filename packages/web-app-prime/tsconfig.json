{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/e2e/**/*.ts"
  ],
  "files": [
    "./typings/global.d.ts",
    "../../typings/global.d.ts"
  ],
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
